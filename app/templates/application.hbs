<header class="navigation">
  <div class="navigation-wrapper">
    <a href="javascript:void(0)" class="logo"></a>
    <a href="" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
    <div class="nav">
      <ul id="navigation-menu">
        <li class="nav-link">{{link-to 'Home' 'application'}}</li>
        <li class="nav-link">{{link-to 'Profile' 'profile.index'}}</li>
      </ul>
    </div>
  </div>
</header>

<main>
  <aside>
    <h1>Player Stats</h1>

    <p class="title">
      <strong>Title:</strong>
      {{session.player.title}}
    </p>

    <p class="exp">
      <strong>Exp:</strong>
      {{session.player.exp}}
    </p>

    <p class="hunts">
      <strong>Hunts:</strong>
      {{session.player.hunts}}
    </p>

    <p class="rubies">
      <strong>Rubies:</strong>
      {{session.player.rubies}}
    </p>

    <p>
      <strong>Level Proess:</strong>
      {{session.player.level}}
      <div class="progress-bar" style="margin: 0px;">
        <span class="meter" {{bind-attr style="levelProgress"}}></span>
      </div>
    </p>

    <hr />

    <p class="muscle">
      <strong>Muscle:</strong>
      {{#if isEditingPoints}}
        {{musclePoints}}
        <div {{action 'add' 'muscle'}}> + </div>
        <div {{action 'minus' 'muscle'}}> - </div>
      {{else}}
        {{session.player.muscle}}
      {{/if}}
    </p>

    <p class="intellect">
      <strong>Intellect:</strong>
      {{#if isEditingPoints}}
        {{intellectPoints}}
        <div {{action 'add' 'intellect'}}> + </div>
        <div {{action 'minus' 'intellect'}}> - </div>
      {{else}}
        {{session.player.intellect}}
      {{/if}}
    </p>

    <p class="defense">
      <strong>Defense:</strong>
      {{#if isEditingPoints}}
        {{defensePoints}}
        <div {{action 'add' 'defense'}}> + </div>
        <div {{action 'minus' 'defense'}}> - </div>
      {{else}}
        {{session.player.defense}}
      {{/if}}
    </p>

    {{#if isEditingPoints}}
      <p>
        You have <strong>{{pointsToSpendComputed}}</strong> spending points!
      </p>

      <button {{action "savePoints"}}>
        Save
      </button>
    {{/if}}
  </aside>

  <section>
    {{outlet}}
  </section>
</main>
