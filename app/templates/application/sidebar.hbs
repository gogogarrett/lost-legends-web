<aside class="col-md-2">
  <h1>Player Stats</h1>

  <p class="title">
    <strong>Title:</strong>
    {{session.player.title}}
  </p>

  <p class="exp">
    <strong>Exp:</strong>
    {{session.player.exp}}
  </p>

  <p class="hunts">
    <strong>Hunts:</strong>
    {{session.player.hunts}}
  </p>

  <p class="rubies">
    <strong>Rubies:</strong>
    {{session.player.rubies}}
  </p>

  <p>
    <strong>Health:</strong>
    <div class="progress">
      <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" {{bind-attr style="healthProgress"}}>
        {{session.player.health_progress}}%
      </div>
    </div>
  </p>

  <p>
    <strong>Level:</strong>
    {{session.player.level}}

    <div class="progress">
      <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" {{bind-attr style="levelProgress"}}>
        {{session.player.level_progress}}%
      </div>
    </div>
  </p>

  <hr />

  <div class="stats">
    <div class="muscle row">
      <strong class="col-md-8">Muscle:</strong>

      <div class="muscle-stat col-md-4 text-right">
        {{#if isEditingPoints}}
          {{musclePoints}}
          <button class="btn btn-default btn-xs" {{action "add" "muscle"}}>
            +
          </button>
          <button class="btn btn-default btn-xs" {{action "minus" "muscle"}}>
            -
          </button>
        {{else}}
          {{session.player.muscle}}
        {{/if}}
      </div>
    </div>

    <div class="intellect row">
      <strong class="col-md-8">Intellect:</strong>
      <div class="intellect-stat col-md-4 text-right">
        {{#if isEditingPoints}}
          {{intellectPoints}}
          <button class="btn btn-default btn-xs" {{action "add" "intellect"}}>
            +
          </button>
          <button class="btn btn-default btn-xs" {{action "minus" "intellect"}}>
            -
          </button>
        {{else}}
          {{session.player.intellect}}
        {{/if}}
      </div>
    </div>

    <div class="defense row">
      <strong class="col-md-8">Defense:</strong>

      <div class="defense-stat col-md-4 text-right">
        {{#if isEditingPoints}}
          {{defensePoints}}
          <button class="btn btn-default btn-xs" {{action "add" "defense"}}>
            +
          </button>
          <button class="btn btn-default btn-xs" {{action "minus" "defense"}}>
            -
          </button>
        {{else}}
          {{session.player.defense}}
        {{/if}}
      </div>
    </div>

    <div class="spending-points">
      {{#if isEditingPoints}}
        <p>
          You have <strong>{{pointsToSpendComputed}}</strong> spending points!
        </p>
        <button class="btn btn-primary" {{action "savePoints"}}>
          Save
        </button>
      {{/if}}
    </div>
  </div>
</aside>
